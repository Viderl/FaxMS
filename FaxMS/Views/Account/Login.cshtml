@{
    ViewData["Title"] = "登入";
}
<h2>登入</h2>
<form asp-action="Login" method="post">
    <div>
        <label>帳號</label>
        <input type="text" name="account" />
    </div>
    <div>
        <label>密碼</label>
        <input type="password" name="password" />
    </div>
    <button type="submit">登入</button>
    @if (!ViewData.ModelState.IsValid)
    {
        <div style="color:red">@ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage</div>
    }
</form>
