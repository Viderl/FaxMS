@{
    ViewData["Title"] = "新增來源系統";
}
<h2>新增來源系統</h2>
<form asp-action="Create" method="post">
    <div>
        <label>名稱</label>
        <input type="text" name="name" />
    </div>
    <button type="submit">新增</button>
    @if (!ViewData.ModelState.IsValid)
    {
        <div style="color:red">@ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage</div>
    }
</form>
<a asp-action="Index">返回</a>
